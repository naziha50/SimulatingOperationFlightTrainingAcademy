<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="CENTER" fx:controller="com.example.javafx.controllers.TrackAttendanceController">
    <Label text="Track Attendance" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TableView fx:id="attendanceTable" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn fx:id="studentNameColumn" text="Student Name" />
            <TableColumn fx:id="attendanceStatusColumn" text="Attendance Status" />
            <TableColumn fx:id="dateColumn" text="Date" />
            <TableColumn fx:id="remarksColumn" text="Remarks" />
        </columns>
    </TableView>
    <Button text="Back" onAction="#goBack" />
</VBox>
